<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.dhuwi_1202154348_modul3.DetailAir">

    <android.support.v7.widget.Toolbar
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:id="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    <ImageView
        android:id="@+id/gambarnya_air"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/detail_nama_air"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/detailnya_air"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@color/colorPrimaryDark" />
    <ImageView
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:id="@+id/galonyangdiisi"
        android:src="@drawable/galonnya"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="kurangin"
            android:layout_gravity="center_vertical"
            android:text="-"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:text="20 Liter"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/liternya"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="tambahin"
            android:layout_gravity="center_vertical"
            android:text="+"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>
